@model GH.Core.ViewModels.PaymentEmailViewModel
<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8"/>
    <title>Regit: Take Control of Your Information</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
</head>
<body style="margin: 0; padding: 0;">
<table border="0" cellpadding="0" cellspacing="0" width="100%">
    <tr>
        <td style="padding: 10px 0 30px 0;">
            <table align="center" border="0" cellpadding="0" cellspacing="0" width="600" style="border: 1px solid #cccccc; border-collapse: collapse;">
                <tr>
                    <td align="center" bgcolor="#00adef" style="padding: 40px 0 30px 0; color: #ffffff; font-size: 28px; font-weight: bold; font-family: Arial, sans-serif;">
                        <img src="https://regit.today/Areas/Beta/img/regit-logotype-light.png" border="0" alt="Regit: Take Control of Your Information" height="150" style="display: block; font-size: 36px;"/>
                    </td>
                </tr>
                <tr>
                    <td bgcolor="#ffffff" style="padding: 10px 30px 40px 30px;">
                        <table border="0" cellpadding="0" cellspacing="0" width="100%">
                            <tr>
                                <td style="padding: 10px 0 30px 0; color: #153643; font-family: Arial, sans-serif; font-size: 16px; line-height: 20px;">
                                    <p>Dear @Model.toName,</p>
                                    <p>You have been succesfully charged for your new subscription.</p>
                                        <table border="0" cellpadding="0" cellspacing="0" width="90%">
                                            <tr>
                                                <td bgcolor="#d2e9f7" style="padding: 10px; font-size: 16px; width: 40%">
                                                    Product Name
                                                </td>
                                                <td bgcolor="#d2e9f7" style="padding: 10px; font-size: 16px; white-space: pre-line">
                                                    @Html.Raw(Html.Encode(Model.productName))
                                                </td>
                                            </tr>
                                            <tr>
                                                <td bgcolor="#d2e9f7" style="padding: 10px; font-size: 16px; width: 40%">
                                                    Amount
                                                </td>
                                                <td bgcolor="#d2e9f7" style="padding: 10px; font-size: 16px; white-space: pre-line">
                                                    @Model.amount
                                                </td>
                                            </tr>
                                            <tr>
                                                <td bgcolor="#d2e9f7" style="padding: 10px; font-size: 16px; width: 40%">
                                                    Payment Method
                                                </td>
                                                <td bgcolor="#d2e9f7" style="padding: 10px; font-size: 16px; white-space: pre-line">
                                                    @Model.method
                                                </td>
                                            </tr>                                          
                                            <tr>
                                                <td bgcolor="#d2e9f7" style="padding: 10px; font-size: 16px; width: 40%">
                                                    Transaction ID
                                                </td>
                                                <td bgcolor="#d2e9f7" style="padding: 10px; font-size: 16px; white-space: pre-line">
                                                    @Model.transactionId
                                                </td>
                                            </tr>
                                            <tr>
                                                <td bgcolor="#d2e9f7" style="padding: 10px; font-size: 16px; width: 40%">
                                                    Next Payment Scheduled  
                                                </td>
                                                <td bgcolor="#d2e9f7" style="padding: 10px; font-size: 16px; white-space: pre-line">
                                                    @Html.Raw(Model.nextCharge)
                                                </td>
                                            </tr>
                                        </table>

                                    <p>
                                        <a href="@Model.backLink">Click here to view subscription details on Billing</a>.
                                    </p>
                                    <p>Thanks for supporting us,</p>
                                    <p>Regit Team</p>
                                </td>
                            </tr>
                        </table>
                    </td>
                </tr>
                <tr>
                    <td bgcolor="#65808a" style="padding: 30px 30px 30px 30px;">
                        <table border="0" cellpadding="0" cellspacing="0" width="100%">
                            <tr>
                                <td style="color: #ffffff; font-family: Arial, sans-serif; font-size: 14px;" width="75%">
                                    &copy; Regit Pte. Ltd. All Rights Reserved.
                                </td>
                            </tr>
                        </table>
                    </td>
                </tr>
            </table>
        </td>
    </tr>
</table>
</body>
</html>