<div class="container-fluid">
    <div class="row row-custom">
        <div class="navbar">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#footer-navbar">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>
            <div id="footer-navbar" class="navbar-collapse collapse">
                <div class="row row-custom">

                    <div class="col-xs-12">
                        <ul class="nav navbar-nav">
                            <li>
                                <a href="http://regit.sg">@GH.Lang.Regit.About_Us.ToUpper()</a>
                            </li>
                            <li class="dot-separator"><a>&middot;</a></li>
                            <li>
                                <a href="/BusinessAccount/SignUp">@GH.Lang.Regit.Regit_For_Business.ToUpper()</a>
                            </li>
                            <li class="dot-separator"><a>&middot;</a></li>
                            <li>
                                <a>@GH.Lang.Regit.Regit_For_Developers.ToUpper()</a>
                            </li>
                            <li class="dot-separator"><a>&middot;</a></li>
                            <li>
                                <a href="/privacy">@GH.Lang.Regit.Legal_AndSign_Privacy.ToUpper()</a>
                            </li>
                            <li class="dot-separator"><a>&middot;</a></li>
                            <li>
                                <a>@GH.Lang.Regit.Careers.ToUpper()</a>
                            </li>
                        </ul>
                        <div ng-controllers="LanguageController" class="dropup language-drop-list pull-right">
                            <a class="dropdown-toggle" data-toggle="dropdown">
                                {{language.Name}}
                                <span class="dl-caret"></span>
                            </a>
                            <ul class="dropdown-menu">
                                <li ng-repeat="lang in languages" ng-click="changeLanguage(lang)"> <a> {{lang.Name}} </a></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>