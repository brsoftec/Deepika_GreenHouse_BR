@model GH.Core.ViewModels.InviteEmailViewModel
@{
    string purpose = String.Empty;
    switch (Model.category)
    {
        case "network":
            purpose = ", to join his/her network";
            break;
        case "workflow":
            purpose = ", to join its workflow and start contributing as a business member";
            break;
    }
}
<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8"/>
    <title>Regit: Take Control of Your Information</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
</head>
<body style="margin: 0; padding: 0;">
<table border="0" cellpadding="0" cellspacing="0" width="100%">
    <tr>
        <td style="padding: 10px 0 30px 0;">
            <table align="center" border="0" cellpadding="0" cellspacing="0" width="600" style="border: 1px solid #cccccc; border-collapse: collapse;">
                <tr>
                    <td align="center" bgcolor="#00adef" style="padding: 40px 0 30px 0; color: #ffffff; font-size: 28px; font-weight: bold; font-family: Arial, sans-serif;">
                        <img src="https://regit.today/Areas/Beta/img/regit-logotype-light.png" border="0" alt="Regit: Take Control of Your Information" height="150" style="display: block; font-size: 36px;"/>
                    </td>
                </tr>
                <tr>
                    <td bgcolor="#ffffff" style="padding: 10px 30px 40px 30px;">
                        <table border="0" cellpadding="0" cellspacing="0" width="100%">
                            <tr>
                                <td style="padding: 10px 0 30px 0; color: #153643; font-family: Arial, sans-serif; font-size: 16px; line-height: 20px;">
                                    <p>Dear @Model.toName,</p>
                                    <p>@Model.fromName has invited you to join Regit. Regit is a secure platform that simplifies how you communicate and exchange information with the people and businesses you trust. Regit saves you time, gives you peace of mind, and puts you in control of your information..</p>
                                    @if (!string.IsNullOrEmpty(Model.message))
                                    {
                                        <p>Message from @Model.fromName:</p>
                                        <table border="0" cellpadding="0" cellspacing="0" width="90%">
                                            <tr>
                                                <td bgcolor="#d2e9f7" style="padding: 10px; font-size: 16px; white-space: pre-line">
                                                    @Html.Raw(Html.Encode(Model.message).Replace("\n", "<br />"))
                                                </td>
                                            </tr>
                                        </table>
                                    }

                                    <p>
                                        <a href="@Model.backLink">Click here to get started</a>.
                                    </p>
                                    <p>Thanks,</p>
                                    <p>Regit Team</p>
                                </td>
                            </tr>
                        </table>
                    </td>
                </tr>
                <tr>
                    <td bgcolor="#65808a" style="padding: 30px 30px 30px 30px;">
                        <table border="0" cellpadding="0" cellspacing="0" width="100%">
                            <tr>
                                <td style="color: #ffffff; font-family: Arial, sans-serif; font-size: 14px;" width="75%">
                                    &copy; Regit Pte. Ltd. All Rights Reserved.
                                </td>
                            </tr>
                        </table>
                    </td>
                </tr>
            </table>
        </td>
    </tr>
</table>
</body>
</html>