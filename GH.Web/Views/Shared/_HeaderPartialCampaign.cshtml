<div class="navbar navbar-default">
    <div class="container-fluid" style="padding-left: 0px; padding-right: 0px">
        @if (!User.Identity.IsAuthenticated)
        {
            <div class="col-md-12">
                <div class="row" >
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                    </div>
                    <div class="navbar-collapse collapse">
                        <div class="col-md-2 welcome navbar-main navbar-home">
                            <div class="row row-custom"></div>
                            <div class="row row-custom">
                                <a href="/" class="swing-style">regit</a>
                            </div>
                        </div>
                       
                    </div>
                </div>
            </div>
        }
        else
        {
            <div class="col-md-12">
                <div class="row authorized">
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                    </div>
                    <div class="navbar-collapse collapse">
                        <div class="col-md-3 welcome navbar-main">
                            <div class="col-md-10 col-md-offset-2 col-sm-12 col-xs-12">
                                <div class="row">
                                    <a href="/" class="swing-style">regit</a>
                                </div>
                            </div>
                        </div>
                        <div class="welcome col-md-3 navbar-main">
                            <div class="row">
                                <a class="swing-style">@GH.Lang.Regit.Welcome <span class="welcome-user">{{currentUserProfile.DisplayName}}</span></a>
                            </div>
                        </div>
                        <div class="navbar-main col-md-6">
                            <div class="row">
                                <div class="col-md-12">
                                    <ul class="nav navbar-nav nav-links pull-right">
                                        <li><a href="/activitylog/index">@GH.Lang.Regit.ACTIVITY_LOG</a></li>
                                        <li class="dot-separator"><a>&middot;</a></li>
                                        <li ng-hide="!(currentUserProfile.AccountType=='Personal')" ng-controller="UserLayoutController"><a ng-click="SMSAuthencationVault()">@GH.Lang.Regit.VAULT</a></li>
                                        <li class="dot-separator"><a>&middot;</a></li>
                                        <li><a href="/User/Settings">@GH.Lang.Regit.ACCOUNT_SETTINGS</a></li>
                                        <li ng-hide="(currentUserProfile.AccountType=='Personal')" class="dot-separator"><a>&middot;</a></li>
                                        <li ng-hide="(currentUserProfile.AccountType=='Personal')"><a href="/BusinessAccount">@GH.Lang.Regit.Business_Dashboard.ToUpper()</a></li>
                                        <li ng-if="linkedWithBusinessAccount" class="dot-separator"><a>&middot;</a></li>
                                        <li ng-controller="UserLayoutController"><a ng-click="logout()" class="logout">@GH.Lang.Regit.LOG_OUT</a></li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>