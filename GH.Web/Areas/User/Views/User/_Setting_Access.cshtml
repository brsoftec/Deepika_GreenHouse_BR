@using GH.Lang
<div ng-controller="ManageLoginPasswordController" id="access">
    <div class="account-form-row">
        <div class="acccunt-form-label">
            <span class="field-title">SMS OTP</span>
            @*{{SMS.Enable | json}}*@
        </div>
        <div class="account-form-control control-float-right">
            <switcher ng-model="sms.enable" switcher-on-text="On" switcher-off-text="Off" on-changed="setSMSOTP()"></switcher>
        </div>
    </div>
    <div class="account-form-row">
        <div class="account-form-label">
            <span class="field-title h-34">@Regit.Change_Login_Password</span>
        </div>
        <div class="account-form-control">
            <div ng-if="editting.Password" class="form-horizontal">
                <div class="form-group">
                    <label class="col-md-3 control-label">@Regit.Old_Password</label>
                    <div class="col-md-9">
                        <input type="password" class="fix-width-mini" ng-model="changePasswordModel.OldPassword" />
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-3 control-label">@Regit.New_Password</label>
                    <div class="col-md-9">
                        <input type="password" class="fix-width-mini" ng-model="changePasswordModel.NewPassword" />
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-3 control-label">@Regit.Confirm_New_Password</label>
                    <div class="col-md-9">
                        <input type="password" class="fix-width-mini" ng-model="changePasswordModel.ConfirmPassword" />
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-3 control-label"></label>
                    <div class="col-md-9">
                        <a class="btn btn-blue fix-width-mini" ng-click="changePassword()">@Regit.Save</a>
                        <a class="btn btn-white fix-width-mini" ng-click="cancelChangePassword()">@Regit.Cancel</a>
                    </div>
                </div>
            </div>
        </div>
        <div class="account-form-label text-right" ng-if="!editting.Password">
            <a class="field-action regit-color" ng-class="{'editting': editting.Password}" ng-click="edit('Password')"><i  class="fa fa-pencil"></i> @Regit.Edit</a>
        </div>
    </div>

