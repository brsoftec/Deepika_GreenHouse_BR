@{
    ViewBag.PageKeywords = "regit, social, identity, personal, share, organize, network, web, mobile ";
    ViewBag.About = true;
    //ViewBag.AngularApp = "regitAbout";
    if (string.IsNullOrEmpty(ViewBag.NgApp))
    {
        ViewBag.NgApp = "regitAbout";
    }
    if (ViewBag.Title == null)
    {
        ViewBag.Title = "Regit";
    }    
    if (ViewBag.Description == null)
    {
        ViewBag.Description = "Regit: Take Control of Your Information";
    }
    ViewBag.BaseUrl = Request.Url.GetLeftPart(UriPartial.Authority);
}

<!DOCTYPE html>
<html ng-app="@ViewBag.NgApp">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="@ViewBag.Title">
    <meta name="keywords" content="@ViewBag.PageKeywords"/>
    
    <meta name="twitter:card" content="summary">
    <meta name="twitter:title" content="Regit">
    <meta name="twitter:description" content="@ViewBag.Title">
    <meta name="twitter:creator" content="Regit">
    <meta name="twitter:image" content="https://regit.today/Areas/About/Content/img/regit-logotype.png">
    <meta name="twitter:url" content="https://regit.today">
    <meta name="twitter:domain" content="regit.today">
    
    @RenderSection("meta", required: false)
    
    <meta property="og:url" content="https://regit.today">
    <meta property="og:type" content="website"/>
    <meta property="og:site_name" content="Regit"/>
    <meta property="og:title" content="Regit"/>
    <meta property="og:description" content="@ViewBag.PageDescription"/>
    <meta property="og:image" content="@(ViewBag.BaseUrl)/Areas/Beta/img/regit-logotype.png">

    <link href="//fonts.googleapis.com/css?family=Roboto:300,400,500,700" rel="stylesheet">

    <title>@ViewBag.Title</title>


    <link rel="stylesheet" href="@Url.Versioned("~/Areas/Beta/css/regit-main.css")">
    <link rel="stylesheet" href="@Url.Versioned("~/Areas/Beta/css/about.css")">

    @RenderSection("styles", required: false)

    <link rel="stylesheet" href="@Url.Versioned("~/Areas/Beta/css/responsive.css")">

    <script>
        var regitGlobal = regitGlobal || {};
        regitGlobal.ngApp = '@ViewBag.NgApp';
    </script>
    @RenderSection("prescripts", required: false)



</head>
<body class="about @ViewBag.BodyClass" resize>
@Html.Partial("_AboutHeaderPartial")

@RenderBody()

@Html.Partial("_AboutFooterNewPartial")


@Scripts.Render("~/bundles/js/public-vendor")
