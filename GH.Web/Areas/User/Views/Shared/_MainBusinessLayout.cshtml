@{
    ViewBag.IsBusiness = true;
}

<!DOCTYPE html>
<html ng-app="regitBusiness" ng-controller="MainCtrl" ng-cloak>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="Regit for Business">
    <meta property="og:title" content="Regit for Business" />
    <link href="http://fonts.googleapis.com/css?family=Roboto:300,400,500,700" rel="stylesheet">
    <title>Regit for Business - @ViewBag.Title</title>
    @Styles.Render("~/bundles/css/main")
    @Styles.Render("~/bundles/css/business")
   
    @RenderSection("styles", required: false)
</head>
<body ng-controller="BusinessCtrl">
    
    @Html.Partial("_MainHeaderPartial")
    <div class="main-body">
        @RenderBody()
    </div>
    @Html.Partial("_MainFooterPartial")

    @Scripts.Render("~/bundles/js/vendor")
    @Scripts.Render("~/bundles/js/main")
    @Scripts.Render("~/bundles/js/business")
    @RenderSection("scripts", required: false)


</body>
</html>
