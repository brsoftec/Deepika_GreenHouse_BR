    Layout = ViewBag.IsBusinessView ? "~/Areas/User/Views/Shared/_MainBusinessLayoutApply.cshtml" : "~/Areas/User/Views/Shared/_MainLayoutApply.cshtml";
}

@section meta {
    @RenderSection("meta", required: false)
}
@section styles {
    @RenderSection("styles", required: false)
}
@section scripts {
    @RenderSection("scripts", required: false)
}
@section prescripts {
    @RenderSection("prescripts", required: false)
}
@section initscripts {
    @RenderSection("initscripts", required: false)
}


